<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        
          <div class="row">
            <div class="col-md-12">
              <h3 class="text-center">{{this.title}}</h3>
            </div>
          </div>
      
      </div>
    </div>
  </div>
</div>



<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <br>
      <br>
      <div class="row">
          
        <div class="form-group col-md-10">
          <textarea class="form-control" rows="5" id="note-body"></textarea>
        </div>
        <div class="col-md-2">
          <button class="btn btn-default" type="submit" id="note-submit" article-id={{this.id}}>Add Note</button>
        </div>
             
      </div>




      <div id="article-dump">
        {{#each this.note}}
          <div class="row">

            <div id=class="col-md-10 panel panel-default">
              <p>{{this.note.body}}</p>
            </div>

            <div class="col-md-2">
              <form>
                <button class="btn btn-danger remove-note-button" type="submit">Remove</button>
              </form>
            </div>
                
          </div>

          <br>
          <br>

        {{/each}}
      
      </div>
    </div>
  </div>
</div>
